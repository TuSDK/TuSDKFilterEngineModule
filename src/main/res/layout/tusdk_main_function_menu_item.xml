<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    app:layout_constrainedWidth="true">

    <ImageView
        android:id="@+id/lsq_function_menu_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lsq_function_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/text13"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="@id/lsq_function_menu_icon"
        app:layout_constraintRight_toRightOf="@id/lsq_function_menu_icon"
        app:layout_constraintTop_toBottomOf="@id/lsq_function_menu_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>