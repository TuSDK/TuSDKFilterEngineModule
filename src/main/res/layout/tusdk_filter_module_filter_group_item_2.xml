<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lsq_filter_item_list"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="2dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <View
        android:layout_marginRight="3dp"
        android:id="@+id/lsq_filter_group_line"
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:background="#3DFFFFFF"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@id/lsq_filter_item_list"
        app:layout_constraintBottom_toBottomOf="@id/lsq_filter_item_list"
        app:layout_constraintLeft_toRightOf="@id/lsq_filter_item_list"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>