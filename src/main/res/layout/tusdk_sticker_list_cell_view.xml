<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    >

    <RelativeLayout
        android:id="@+id/lsq_item_wrap"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/sticker_item_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/lsq_item_image"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/lsq_progress_image"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/sticker_load_ic"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/lsq_item_state_image"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignEnd="@id/lsq_item_image"
            android:layout_alignBottom="@id/lsq_item_image"
            android:scaleType="centerInside"
            android:src="@drawable/sticker_download_ic"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/lsq_item_remove"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/sticker_delete_ic"
            android:visibility="gone" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>