<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lsq_sticker_layout"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:background="#3C000000"
    android:layout_alignParentBottom="true"
    android:orientation="vertical">

    <LinearLayout
        android:background="#3C000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/lsq_cancel_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/lsq_video_ic_nix" />

        <View
            android:layout_gravity="center_vertical"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="#3DFFFFFF" />

        <org.lasque.tusdkdemohelper.tusdk.TabPagerIndicator
            android:id="@+id/lsq_TabIndicator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:normal_text_color="#99FFFFFF"
            app:high_light_text_color="@color/lsq_color_white"
            app:text_size="11">

        </org.lasque.tusdkdemohelper.tusdk.TabPagerIndicator>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#26FFFFFF" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/lsq_viewPager"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        >
    </androidx.viewpager2.widget.ViewPager2>
    <ImageView
        android:background="#3C000000"
        android:id="@+id/lsq_back"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@drawable/backup_ic_alpha"
        />


</LinearLayout>