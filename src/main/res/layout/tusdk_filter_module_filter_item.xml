<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/lsq_filter_icon"
        android:layout_width="58dp"
        android:layout_height="58dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lsq_filter_title"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:gravity="center"
        android:textColor="@color/lsq_color_white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/lsq_filter_icon"
        app:layout_constraintRight_toRightOf="@id/lsq_filter_icon"
        app:layout_constraintTop_toBottomOf="@id/lsq_filter_icon" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/lsq_config_icon"
        android:layout_width="24dp"
        android:layout_height="8dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="17dp"
        android:src="@drawable/filter_adjust_ic"
        app:layout_constraintLeft_toLeftOf="@id/lsq_filter_icon"
        app:layout_constraintRight_toRightOf="@id/lsq_filter_icon"
        app:layout_constraintTop_toTopOf="@id/lsq_filter_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>